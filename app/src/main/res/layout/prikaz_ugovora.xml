<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrikazUgovora"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/detalji_ugovor_slika_telefona"
        android:layout_width="140dp"
        android:layout_centerHorizontal="true"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/detalji_ugovor_naziv_telefona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detalji_ugovor_slika_telefona"
        android:text="Naziv telefona "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/detalji_ugovor_slika_paket"
        android:layout_width="140dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/detalji_ugovor_naziv_telefona"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/detalji_ugovor_naziv_paket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detalji_ugovor_slika_paket"
        android:text="Naziv paketa "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/detalji_ugovor_korisnik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detalji_ugovor_naziv_paket"
        android:layout_marginTop="25dp"
        android:gravity="left"
        android:layout_marginStart="20dp"
        android:text="Korisnik "
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/detalji_ugovor_datum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detalji_ugovor_korisnik"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_marginStart="20dp"
        android:text="Datum "
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/detalji_ugovor_trajanje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detalji_ugovor_datum"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_marginStart="20dp"
        android:text="Trajanje "
        android:textColor="@android:color/black"
        android:textSize="25sp" />



</RelativeLayout>