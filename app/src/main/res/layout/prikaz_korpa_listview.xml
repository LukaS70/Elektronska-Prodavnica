<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <TextView
            android:id="@+id/naziv_telefona_ugovor"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="Naziv telefona"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/slika_telefona_korpa"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/cena_telefona_ugovor"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/naziv_telefona_ugovor"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Cena telefona"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/naziv_paketa_ugovor"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/naziv_telefona_ugovor"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="111dp"
            android:text="Naziv paketa"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/slika_paketa_korpa"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_below="@id/slika_telefona_korpa"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/cena_paketa_ugovor"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/naziv_paketa_ugovor"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"

            android:text="Cena paketa"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/cena_ukupna_ugovor"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:text="Cena ukupna"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/ukupno_labela"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="15dp"
            android:text="Ukupna cena: "
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>